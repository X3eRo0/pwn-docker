" enable numbers on the left
set number

" Enable filetype plugin and filetype based indent plugin
filetype plugin on
filetype indent on

" always show current position
set ruler

" Enable dark background
set background=dark

" Use spaces instead of tabs
set expandtab

" 1 tab == 2 spaces
set shiftwidth=2
set tabstop=2

" enable relative line numbers
set relativenumber
